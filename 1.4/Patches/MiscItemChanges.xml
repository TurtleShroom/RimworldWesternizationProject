<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- ========== RWP Vanilla Tags  ========== -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Apparel_CowboyHat"]/apparel/tags</xpath>
    <value>
      <li>RWPWesternWear</li>
      <li>RWPBanditWear</li>
      <li>RWPMarshalWear</li>
    </value>
  </Operation>
	<Operation Class="PatchOperationConditional">
		<!-- Does this exist? -->
		<xpath>/Defs/ThingDef[defName="Apparel_BowlerHat"]/tags</xpath>
		<!-- If it does, add this. -->
		<match Class="PatchOperationAdd">
			<success>Always</success>
			<xpath>/Defs/ThingDef[defName="Apparel_BowlerHat"]/tags</xpath>
			<value>
				<li>RWPWesternWear</li>
				<li>RWPBanditWear</li>
				<li>RWPMarshalWear</li>
			</value>
		</match>
		<!-- If it DOES NOT, add this instead. -->
		<nomatch Class="PatchOperationAdd">
			<success>Always</success>
			<xpath>/Defs/ThingDef[defName="Apparel_BowlerHat"]</xpath>
			<value>
				<tags>
					<li>RWPWesternWear</li>
					<li>RWPBanditWear</li>
					<li>RWPMarshalWear</li>
				</tags>
			</value>
		</nomatch>
	</Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Apparel_Pants"]/apparel/tags</xpath>
    <value>
      <li>RWPWesternWear</li>
      <li>RWPBanditWear</li>
      <li>RWPMarshalWear</li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Apparel_BasicShirt"]/apparel/tags</xpath>
    <value>
      <li>RWPWesternWear</li>
      <li>RWPBanditWear</li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Apparel_CollarShirt"]/apparel/tags</xpath>
    <value>
      <li>RWPWesternWear</li>
      <li>RWPBanditWear</li>
      <li>RWPMarshalWear</li>
      <li>RWPGentlemanWear</li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Apparel_Duster"]/apparel/tags</xpath>
    <value>
      <li>RWPWesternWear</li>
      <li>RWPBanditWear</li>
      <li>RWPMarshalWear</li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Apparel_Jacket"]/apparel/tags</xpath>
    <value>
      <li>RWPWesternWear</li>
      <li>RWPBanditWear</li>
    </value>
  </Operation>
</Patch>