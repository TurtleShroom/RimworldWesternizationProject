<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- ==== (Marshal) Gunslinger ==== -->
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/PawnKindDef[defName="RWP_Marshal_Gunslinger"]</xpath>
    <value>
      <li Class="CombatExtended.LoadoutPropertiesExtension">
        <primaryMagazineCount>
          <min>2</min>
          <max>4</max>
        </primaryMagazineCount>
      </li>
    </value>
  </Operation>
  <!-- ==== (Marshal) Rifleman ==== -->
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/PawnKindDef[defName="RWP_Marshal_Rifleman"]</xpath>
    <value>
      <li Class="CombatExtended.LoadoutPropertiesExtension">
        <primaryMagazineCount>
          <min>2</min>
          <max>3</max>
        </primaryMagazineCount>
      </li>
    </value>
  </Operation>
  <!-- ==== (Marshal) Sniper ==== -->
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/PawnKindDef[defName="RWP_Marshal_Sniper"]</xpath>
    <value>
      <li Class="CombatExtended.LoadoutPropertiesExtension">
        <primaryMagazineCount>
          <min>10</min>
          <max>15</max>
        </primaryMagazineCount>
      </li>
    </value>
  </Operation>
  <!-- ==== (Marshal) Chief Marshal ==== -->
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/PawnKindDef[defName="RWP_Marshal_Boss"]</xpath>
    <value>
      <li Class="CombatExtended.LoadoutPropertiesExtension">
        <primaryMagazineCount>
          <min>3</min>
          <max>4</max>
        </primaryMagazineCount>
      </li>
    </value>
  </Operation>
</Patch>
