<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- ==== (Bandit) Recruit ==== -->
  <Operation Class="PatchOperationAddModExtension">
    <xpath>*/PawnKindDef[defName="RWP_Bandit_Recruit"]</xpath>
